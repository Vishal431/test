<script>
$(document).ready(function(){
  $(".faq button").click(function(){
  	x = $(this).val();
	alert(x);
  	$(".section").hide();
    $("."+x).parent().show();
  });
  $("p").click(function(){
    $(this).parent().hide();
  });
});
</script>
